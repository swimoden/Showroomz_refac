<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.kuwait.showroomz.viewModel.ApplyForFinanceVM" />

        <variable
            name="view"
            type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_container"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="10dp"
                android:src="@mipmap/back_btn_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/cairo_semi_bold"
                android:text="@string/documents"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/back_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/cairo_regular"
                android:text="@string/step_4_4"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/akamathopia_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/net_salary_certificate_container">
            <com.kuwait.showroomz.extras.customViews.ClickableEditText
                android:id="@+id/akamathopia_TextInputEditText"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/cairo_regular"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:singleLine="false"
                android:drawableEnd="@drawable/upload_icon"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/outline_gray"
                android:padding="10dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/akamathopia_constraint"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/akamathopia"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/cairo_bold"
                android:textSize="14sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginStart="20dp"
                android:background="@color/colorWhite"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/statement_three_month_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/akamathopia_container">
            <com.kuwait.showroomz.extras.customViews.ClickableEditText
                android:id="@+id/statement_three_month_TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/cairo_regular"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"

                android:enabled="false"
                android:singleLine="false"
                android:drawableEnd="@drawable/upload_icon"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/outline_gray"
                android:padding="10dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/statement_constraint"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/three_month_bank_statement"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/cairo_bold"
                android:textSize="14sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginStart="20dp"
                android:background="@color/colorWhite"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bank_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/statement_three_month_container">
            <com.kuwait.showroomz.extras.customViews.ClickableEditText
                android:id="@+id/bank_account_TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/cairo_regular"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:maxLines="1"
                android:text="@={viewModel.bankNumber}"
                android:inputType="number"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/outline_gray"
                android:padding="10dp"
                android:maxLength="14"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bank_account_number"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/cairo_bold"
                android:textSize="14sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginStart="20dp"
                android:background="@color/colorWhite"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/net_salary_certificate_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/top_container">
            <com.kuwait.showroomz.extras.customViews.ClickableEditText
                android:id="@+id/net_salary_certificate_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/cairo_regular"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:enabled="false"
                android:singleLine="false"
                android:drawableEnd="@drawable/upload_icon"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/outline_gray"
                android:padding="10dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/net_salary_constraint"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/net_salary_certificate"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/cairo_bold"
                android:textSize="14sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginStart="20dp"
                android:background="@color/colorWhite"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:id="@+id/request_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/filled_black"
            android:fontFamily="@font/cairo_regular"
            android:text="@string/send_finance_request"
            android:textAllCaps="true"
            android:clickable="@{!viewModel.loading}"

            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.loading?view.VISIBLE:view.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>