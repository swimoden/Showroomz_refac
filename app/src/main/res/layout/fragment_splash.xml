<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kuwait.showroomz.view.fragment.SplashFragment">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/carImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@mipmap/ic_logo" />

            <ImageView
                android:id="@+id/nameImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_name"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/languages_container"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="5dp"
            android:visibility="gone"
            android:weightSum="1">

            <Button
                android:id="@+id/english_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.5"
                android:text="English"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@color/transparent"/>

            <Button
                android:id="@+id/arabicBtn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:text="العربي"
                android:textColor="@color/colorWhite"
                android:textSize="26sp"
                android:background="@color/transparent"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>